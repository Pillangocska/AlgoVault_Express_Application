<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Algorithms - AlgoVault</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">

    <header class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8 flex items-center">
            <div class="flex items-center">
                <i class="fas fa-code text-blue-500 text-3xl mr-2"></i>
                <h1 id="algovault" class="text-3xl font-bold text-blue-500">AlgoVault</h1>
            </div>
        </div>
    </header>

    <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md p-6 mt-8">

        <% if (flashMessages.error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <%= flashMessages.error %>
            </div>
        <% } %>
        <% if (flashMessages.success) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <%= flashMessages.success %>
            </div>
        <% } %>

        <div class="flex items-center mb-6">
            <a href="/" class="mr-4 text-gray-600 hover:text-gray-800">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
            </a>
            <h1 id="my-algorithms" class="text-2xl font-bold">My Algorithms</h1>
        </div>

        <div class="flex justify-end mb-6">
            <a href="/add_new_algo" class="bg-blue-500 text-white px-4 py-2 rounded-md flex items-center hover:bg-blue-600 transition duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                Add New Algorithm
            </a>
        </div>

        <div id="algorithmList" class="space-y-4">
            <% if (userAlgorithms && userAlgorithms.length > 0) { %>
                <% userAlgorithms.forEach(function(algorithm) { %>
                    <div class="bg-white border rounded-lg shadow-sm p-4 flex justify-between items-center">
                        <div>
                            <h2 class="text-xl font-semibold mb-2"><%= algorithm.name %></h2>
                            <p class="text-gray-600">Category: <%= algorithm.category %></p>
                        </div>
                        <div class="flex items-center">
                            <a href="/show_algo/<%= algorithm.id %>" class="text-blue-500 hover:text-blue-700 mr-3">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/edit_algo/<%= algorithm.id %>" class="text-green-500 hover:text-green-700 mr-3">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form action="/edit_algo/<%= algorithm.id %>?_method=DELETE" method="POST" class="inline">
                                <button type="submit" class="text-red-500 hover:text-red-700" onclick="return confirm('Are you sure you want to delete this algorithm?');">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>You haven't added any algorithms yet.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
